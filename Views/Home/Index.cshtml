@model IEnumerable<Gallery>

@{
    ViewData["Title"] = "Vitrine de Imagens";
}

<div class="container">
    @foreach (var g in Model)
    {
        if (g.Images.Count > 0)
        {
            <h2 class="mt-3">@g.Title</h2>
            <hr>
            <div class="row g-3">
                @foreach (var i in g.Images)
                {
                    <div class="col-2">
                        <div class="card p-2 mb-">
                            <a href='@($"{i.imagePath}?width=600&{DateTime.Now.ToShortTimeString()}")'
                    data-lightbox='@i.IdGallery.ToString("D6")' data-title="@i.ImageTitle">
                                <img src='@($"{i.imagePath}?width=200&{DateTime.Now.ToShortTimeString()}")'
                        class="img-responsive p3" width="100%" /></a>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
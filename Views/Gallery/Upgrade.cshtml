@model Gallery

@{
    ViewData["Title"] = "Edição de Galerias de Imagem";
}

<div class="mt-4 p-2">

    <form method="post">

        <input type="hidden" asp-for="@Model.IdGallery">

        <div class="form-group mt-5">

            <input class="form-control" placeholder="Cadastrar Galeria" asp-for="@Model.Title" />
            <span class="text-danger" asp-validation-for="@Model.Title"></span>

        </div>

        <div class="mt-3">

            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button class="btn btn-primary" type="submit">Editar</button>

        </div>

    </form>

</div>